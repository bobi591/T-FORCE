@{ ViewData["Title"] = "Boards"; }

@model List<T_FORCE.Models.KanbanBoard>
@using T_FORCE.Repositories

<div id="container" style="padding: 2%">
    <h1 class="h3 mb-1 text-gray-800">Kanban Boards</h1>
    <p class="mb-4">Defined Kanban Boards</p>

    @{
        UserRepository userRepository = new UserRepository();
        foreach (T_FORCE.Models.KanbanBoard board in Model)
        {
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        @board.Name
                    </h6>
                </div>
                <div class="card-body">
                    <label for="bcreationDate"><b>Date of creation</b></label>
                    <div>@board.DateCreated</div>
                    <label for="bcreationDate"><b>Created by</b></label>
                    <div>@userRepository.GetUserById(board.CreatedBy).GetFirstNameLastName()</div>
                </div>
                <a class="stretched-link" href="Board?id=@board.Id"></a>
            </div>
        }
    }
</div>